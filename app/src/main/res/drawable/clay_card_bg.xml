<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom Shadow -->
    <item android:top="4dp" android:left="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <solid android:color="@color/clay_shadow_dark" />
        </shape>
    </item>
    <!-- Top Highlight -->
    <item android:bottom="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <solid android:color="@color/clay_shadow_light" />
        </shape>
    </item>
    <!-- Main Background -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/premium_card_bg" />
            <corners android:radius="28dp" />
            <stroke android:width="1dp" android:color="#33D4AF37" />
        </shape>
    </item>
</layer-list>