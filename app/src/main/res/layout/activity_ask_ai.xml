<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_gradient">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ask AI"
            android:textColor="#1E293B"
            android:textSize="32sp"
            android:fontFamily="sans-serif-black" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#4DFFFFFF">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_menu_revert"
                android:padding="8dp"
                app:tint="#334155" />
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>

    <!-- AI Response Display Area -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollResponse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@+id/inputArea"
        android:layout_margin="16dp"
        android:scrollbars="none">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            android:backgroundTint="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/glass_card_bg"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvResponse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hi there! Ask me anything, and I'll do my best to help you."
                    android:textColor="#1E293B"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp" />

                <ProgressBar
                    android:id="@+id/pbLoading"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:visibility="gone" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.core.widget.NestedScrollView>

    <!-- AI Input Area -->
    <LinearLayout
        android:id="@+id/inputArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:gravity="center_vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:backgroundTint="@android:color/transparent">
            
            <EditText
                android:id="@+id/etQuestion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/glass_card_bg"
                android:hint="Type your question..."
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="#1E293B"
                android:textColorHint="#64748B"
                android:textSize="15sp"
                android:inputType="textLongMessage"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAsk"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="12dp"
            android:padding="0dp"
            app:icon="@android:drawable/ic_menu_send"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:cornerRadius="16dp"
            app:backgroundTint="#8B5CF6"
            app:elevation="4dp"/>

    </LinearLayout>

</RelativeLayout>