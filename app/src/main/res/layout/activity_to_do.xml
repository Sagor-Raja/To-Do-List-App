<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_gradient"
    tools:context=".ToDoActivity">

    <!-- Glass Header Section -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Board"
            android:textColor="#1E293B"
            android:textSize="32sp"
            android:fontFamily="sans-serif-black" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#4DFFFFFF">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:padding="8dp"
                app:tint="#334155" />
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>

    <!-- Glass Input Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/inputCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        android:backgroundTint="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/glass_card_bg"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/etNewTask"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Write a new task..."
                android:textColor="#1E293B"
                android:textColorHint="#64748B"
                android:background="@android:color/transparent"
                android:padding="12dp"
                android:textSize="15sp"
                android:inputType="textCapSentences"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddTask"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="0dp"
                app:icon="@android:drawable/ic_input_add"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:cornerRadius="16dp"
                app:backgroundTint="#8B5CF6"
                app:elevation="4dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Table Columns Header -->
    <LinearLayout
        android:id="@+id/columnHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputCard"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textColor="#64748B"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TASK"
            android:textColor="#64748B"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"/>

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="STATUS"
            android:textColor="#64748B"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="DEL"
            android:textColor="#64748B"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Dynamic Task List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTasks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/columnHeader"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="20dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_todo_pro" />

</RelativeLayout>