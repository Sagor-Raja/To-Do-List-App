<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    android:backgroundTint="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/glass_card_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- 1. Left Serial Number -->
        <TextView
            android:id="@+id/tvSerial"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#1E293B"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <!-- 2. Task Title -->
        <TextView
            android:id="@+id/tvTaskName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Your Task description here..."
            android:textColor="#1E293B"
            android:textSize="15sp"
            android:layout_marginStart="12dp"
            android:paddingEnd="8dp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <!-- 3. Status: Premium Done Button -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnDone"
            android:layout_width="38dp"
            android:layout_height="38dp"
            app:cardCornerRadius="19dp"
            app:cardBackgroundColor="#10B981"
            app:cardElevation="4dp"
            app:strokeWidth="2dp"
            app:strokeColor="#CCFFFFFF"
            android:layout_marginEnd="8dp">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@android:drawable/checkbox_on_background"
                app:tint="#FFFFFF"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- 4. Status: Premium Close Button -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnCancel"
            android:layout_width="38dp"
            android:layout_height="38dp"
            app:cardCornerRadius="19dp"
            app:cardBackgroundColor="#F43F5E"
            app:cardElevation="4dp"
            app:strokeWidth="2dp"
            app:strokeColor="#CCFFFFFF"
            android:layout_marginEnd="8dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="#FFFFFF"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- 5. Delete Action: Minimalist Design -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnDeleteTaskContainer"
            android:layout_width="38dp"
            android:layout_height="38dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#F1F5F9"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E2E8F0">
            <ImageView
                android:id="@+id/btnDeleteTask"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_delete"
                app:tint="#64748B" />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>