<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/premium_dark">

    <!-- 1. Header Section -->
    <LinearLayout
        android:id="@+id/headerMission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="48dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GOALS"
            android:textColor="@color/premium_gold"
            android:textSize="32sp"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.1"/>

        <TextView
            android:id="@+id/tvLifeMission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MISSION: Master Your Life Roadmap"
            android:textColor="#888888"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:paddingHorizontal="24dp"
            android:gravity="center"/>
    </LinearLayout>

    <!-- 2. Target/Bullseye Progress -->
    <RelativeLayout
        android:id="@+id/targetSection"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/headerMission"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgTargetBullseye"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/goals_img"
            android:padding="15dp" />
    </RelativeLayout>

    <!-- 3. Dynamic Goal List (RecyclerView) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGoalsList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="20dp"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layout_constraintTop_toBottomOf="@id/targetSection"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- 4. Permanent Create Goal Footer -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCreateGoal"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_margin="20dp"
        android:text="+ CREATE NEW GOAL"
        android:textColor="@color/premium_dark"
        android:textStyle="bold"
        android:textSize="16sp"
        app:backgroundTint="@color/premium_gold"
        app:cornerRadius="20dp"
        app:elevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>