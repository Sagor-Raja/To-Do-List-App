<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/premium_dark"
    tools:context=".IdeaActivity">

    <!-- 1. Top Header -->
    <RelativeLayout
        android:id="@+id/topHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ideas"
                android:textColor="#1E293B"
                android:textSize="34sp"
                android:fontFamily="sans-serif-black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capture and organize your thoughts"
                android:textColor="#64748B"
                android:textSize="14sp"/>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            app:strokeWidth="1dp"
            app:strokeColor="#F1F5F9">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:padding="14dp"
                app:tint="#1E293B" />
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topHeader"
        android:clipToPadding="false"
        android:paddingBottom="120dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 2. Glass Tabs -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="27dp"
                app:cardElevation="0dp"
                android:backgroundTint="@android:color/transparent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/glass_card_bg"
                    android:padding="4dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="All"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="#C084FC" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Favorites"
                        android:gravity="center"
                        android:textColor="#64748B" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 3. Glass Search Bar -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="27dp"
                app:cardElevation="0dp"
                android:backgroundTint="@android:color/transparent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/glass_card_bg"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_search"
                        app:tint="#94A3B8"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:hint="Search"
                        android:textColorHint="#94A3B8"
                        android:paddingStart="12dp"
                        android:textSize="15sp"
                        android:inputType="text"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 4. New Idea Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/fabAddIdea"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:text="+ New Idea"
                app:cornerRadius="27dp"
                android:textAllCaps="false"
                app:backgroundTint="#FDF2F8"
                android:textColor="#C084FC"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:layout_marginBottom="24dp"
                app:elevation="2dp"/>

            <!-- 5. Idea Cards List -->
            
            <!-- Idea Item 1 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                android:backgroundTint="@android:color/transparent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/glass_card_bg"
                    android:padding="20dp">
                    <ImageView
                        android:id="@+id/icon1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_menu_directions"
                        app:tint="#3B82F6"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="#EFF6FF"
                        android:padding="8dp"/>
                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/icon1"
                        android:layout_marginStart="16dp"
                        android:text="Smart Home Integration"
                        android:textColor="#1E293B"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:src="@android:drawable/btn_star_big_on"
                        app:tint="#FFC107"/>
                    <TextView
                        android:id="@+id/desc1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title1"
                        android:layout_toEndOf="@id/icon1"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:text="Research options for creating a centralized smart home system."
                        android:textColor="#64748B"
                        android:textSize="13sp"
                        android:lineSpacingExtra="2dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/desc1"
                        android:layout_toEndOf="@id/icon1"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:text="Yesterday"
                        android:textColor="#94A3B8"
                        android:textSize="11sp"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Idea Item 2 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                android:backgroundTint="@android:color/transparent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/glass_card_bg"
                    android:padding="20dp">
                    <ImageView
                        android:id="@+id/icon2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_menu_gallery"
                        app:tint="#10B981"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="#ECFDF5"
                        android:padding="8dp"/>
                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/icon2"
                        android:layout_marginStart="16dp"
                        android:text="Eco-Friendly Packaging"
                        android:textColor="#1E293B"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:src="@android:drawable/btn_star_big_on"
                        app:tint="#FFC107"/>
                    <TextView
                        android:id="@+id/desc2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title2"
                        android:layout_toEndOf="@id/icon2"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:text="Brainstorm eco-friendly packaging ideas for product."
                        android:textColor="#64748B"
                        android:textSize="13sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/desc2"
                        android:layout_toEndOf="@id/icon2"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:text="4 days ago"
                        android:textColor="#94A3B8"
                        android:textSize="11sp"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 6. Floating Glass Bottom Navigation with Names -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottom_nav_card"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        app:cardCornerRadius="38dp"
        app:cardElevation="12dp"
        android:backgroundTint="@android:color/transparent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/glass_card_bg" android:orientation="horizontal" android:gravity="center">
            
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_sort_by_size" app:tint="#64748B"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Home" android:textSize="10sp" android:textColor="#64748B" android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_agenda" app:tint="#64748B"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tasks" android:textSize="10sp" android:textColor="#64748B" android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center" android:background="@drawable/circle_bg" android:backgroundTint="#F3E8FF" android:padding="8dp">
                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_search" app:tint="#8B5CF6"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ideas" android:textSize="10sp" android:textColor="#8B5CF6" android:textStyle="bold" android:layout_marginTop="2dp"/>
            </LinearLayout>

            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/btn_star_big_on" app:tint="#64748B"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Goals" android:textSize="10sp" android:textColor="#64748B" android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_my_calendar" app:tint="#64748B"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Profile" android:textSize="10sp" android:textColor="#64748B" android:layout_marginTop="4dp"/>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Floating Date Icon -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="100dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp">
            <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@android:drawable/ic_menu_my_calendar" app:tint="#3B82F6"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="23" android:textColor="#1E293B" android:textStyle="bold" android:textSize="16sp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>
