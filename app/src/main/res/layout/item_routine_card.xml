<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="06:30 AM"
        android:textColor="#555555"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardView"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"/>

    <View
        android:id="@+id/line"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="#E0E0E0"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/tvTime"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/ivDot"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@android:drawable/radiobutton_off_background"
        app:tint="#6200EE"
        android:background="@android:color/white"
        app:layout_constraintStart_toStartOf="@+id/line"
        app:layout_constraintEnd_toEndOf="@+id/line"
        app:layout_constraintTop_toTopOf="@+id/cardView"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_day"
                app:tint="#FF9800"
                android:padding="4dp"
                android:background="@drawable/glass_card_bg"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tvRoutineTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Morning Routine"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333"/>

                <TextView
                    android:id="@+id/tvRoutineSub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wake up &amp; Hydrate"
                    android:textSize="12sp"
                    android:textColor="#777"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>