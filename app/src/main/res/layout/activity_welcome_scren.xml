<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/premium_dark"
    android:padding="24dp">

    <!-- Premium Illustration Placeholder -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/logoCard"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="35dp"
        app:cardElevation="16dp"
        app:cardBackgroundColor="@color/premium_card_bg"
        app:strokeWidth="2dp"
        app:strokeColor="#D4AF37">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_foreground"
            android:padding="32dp"
            app:tint="#D4AF37" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/welcomeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoCard"
        android:layout_marginTop="48dp"
        android:text="Welcome to\nProductivity Hub"
        android:textColor="#D4AF37"
        android:textSize="36sp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:lineSpacingExtra="4dp"/>

    <TextView
        android:id="@+id/welcomeSub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeTitle"
        android:layout_marginTop="16dp"
        android:text="Master your day, capture your ideas, and track your success with ease."
        android:textColor="#888888"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"/>

    <!-- Premium Claymorphism Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGetStarted"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:text="Get Started"
        android:textColor="@color/premium_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:backgroundTint="#D4AF37"
        app:elevation="8dp"/>

</RelativeLayout>