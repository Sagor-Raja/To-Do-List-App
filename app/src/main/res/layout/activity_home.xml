<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/premium_dark"
    tools:context=".Home">

    <!-- Premium Header Section -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="32dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Productivity Hub"
                    android:textColor="@color/premium_gold"
                    android:textSize="30sp"
                    android:fontFamily="sans-serif-black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Control your daily objectives"
                    android:textColor="#888888"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/premium_card_bg"
                app:strokeWidth="1dp"
                app:strokeColor="@color/premium_gold">

                <ImageView
                    android:id="@+id/menu_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    android:padding="12dp"
                    app:tint="@color/premium_gold" />
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Content Grid -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@+id/bottom_nav_card"
        android:clipToPadding="false"
        android:scrollbars="none">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="12dp"
            android:alignmentMode="alignMargins">

            <!-- Card 1: Daily Work Checklist -->
            <FrameLayout
                android:id="@+id/card_todo"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/clay_card_bg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_menu_agenda"
                        app:tint="@color/premium_gold"/>
                    <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Work Checklist"
                        android:textColor="@color/premium_gold"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stay Productive"
                        android:textSize="12sp"
                        android:textColor="#888888" />
                </LinearLayout>
            </FrameLayout>

            <!-- Card 2: Master Routine -->
            <FrameLayout
                android:id="@+id/card_daily_planner"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/clay_card_bg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        app:tint="@color/premium_gold"/>
                    <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Master Routine"
                        android:textColor="@color/premium_gold"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plan Your Day"
                        android:textSize="12sp"
                        android:textColor="#888888" />
                </LinearLayout>
            </FrameLayout>

            <!-- Card 3: Expense Tracker -->
            <FrameLayout
                android:id="@+id/card_calculate_cost"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/clay_card_bg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_menu_compass"
                        app:tint="@color/premium_gold"/>
                    <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expense Tracker"
                        android:textColor="@color/premium_gold"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Track Everything"
                        android:textSize="12sp"
                        android:textColor="#888888" />
                </LinearLayout>
            </FrameLayout>

            <!-- Card 4: Goal Mastery -->
            <FrameLayout
                android:id="@+id/card_goal_progress"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/clay_card_bg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/btn_star_big_on"
                        app:tint="@color/premium_gold"/>
                    <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Goal Mastery"
                        android:textColor="@color/premium_gold"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:progress="65"
                        android:layout_marginTop="8dp"
                        app:trackThickness="4dp"
                        app:indicatorColor="@color/premium_gold"
                        app:trackCornerRadius="10dp"
                        app:trackColor="#33D4AF37" />
                </LinearLayout>
            </FrameLayout>

            <!-- Card 5: Idea Vault -->
            <FrameLayout
                android:id="@+id/card_idea"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/clay_card_bg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_menu_search"
                        app:tint="@color/premium_gold"/>
                    <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Idea Vault"
                        android:textColor="@color/premium_gold"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save Your Thoughts"
                        android:textSize="12sp"
                        android:textColor="#888888" />
                </LinearLayout>
            </FrameLayout>

            <!-- Card 6: Digital Vault -->
            <FrameLayout
                android:id="@+id/card_document"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/clay_card_bg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_menu_edit"
                        app:tint="@color/premium_gold"/>
                    <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Digital Vault"
                        android:textColor="@color/premium_gold"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Secure Assets"
                        android:textSize="12sp"
                        android:textColor="#888888" />
                </LinearLayout>
            </FrameLayout>

            <!-- Card 7: AI Assistant -->
            <FrameLayout
                android:id="@+id/card_ask_ai"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_columnSpan="2"
                android:layout_margin="8dp"
                android:background="@drawable/clay_card_bg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="24dp">
                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@android:drawable/ic_dialog_info"
                        app:tint="@color/premium_gold"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AI Partner"
                            android:textColor="@color/premium_gold"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ask anything to your assistant"
                            android:textSize="13sp"
                            android:textColor="#888888"/>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

        </GridLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottom_nav_card"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/premium_card_bg"
        app:strokeWidth="1dp"
        app:strokeColor="@color/premium_gold">
        
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            app:elevation="0dp"
            app:itemIconSize="22dp"
            app:labelVisibilityMode="labeled"
            app:itemIconTint="@color/premium_gold"
            app:itemTextColor="@color/premium_gold"
            app:menu="@menu/bottom_nav_menu" />
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>