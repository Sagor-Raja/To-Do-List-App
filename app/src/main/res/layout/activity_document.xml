<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/premium_dark"
    tools:context=".DocumentActivity">

    <!-- 1. Header Section -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Documents"
                android:textColor="#1E293B"
                android:textSize="34sp"
                android:fontFamily="sans-serif-black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage your files &amp; notes"
                android:textColor="#64748B"
                android:textSize="14sp"/>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            app:strokeWidth="1dp"
            app:strokeColor="#F1F5F9">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:padding="14dp"
                app:tint="#1E293B" />
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:clipToPadding="false"
        android:paddingBottom="120dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 2. Three Tabs Segment with Divider -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="27dp"
                app:cardElevation="0dp"
                android:backgroundTint="@android:color/transparent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/glass_card_bg"
                    android:padding="4dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="All Files"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="#C084FC" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Favorites"
                        android:gravity="center"
                        android:textColor="#64748B" />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="#E2E8F0"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Recent"
                        android:gravity="center"
                        android:textColor="#64748B" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 3. Search Bar -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp"
                android:backgroundTint="@android:color/transparent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/glass_card_bg"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@android:drawable/ic_menu_search"
                        app:tint="#94A3B8"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Search"
                        android:textColor="#94A3B8"
                        android:paddingStart="12dp"
                        android:textSize="15sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 4. Document Items -->
            
            <!-- Item 1: Weekly Report -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                android:backgroundTint="@android:color/transparent">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/glass_card_bg" android:padding="18dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@android:drawable/ic_menu_agenda" app:tint="#10B981" android:background="@drawable/circle_bg" android:backgroundTint="#ECFDF5" android:padding="8dp"/>
                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Weekly Report" android:textColor="#1E293B" android:textStyle="bold" android:textSize="16sp"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Yesterday • 286 KB" android:textColor="#64748B" android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView android:layout_width="18dp" android:layout_height="18dp" android:src="@android:drawable/btn_star_big_on" app:tint="#FFC107"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Item 2: Idea Notes -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                android:backgroundTint="@android:color/transparent">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/glass_card_bg" android:padding="18dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@android:drawable/ic_menu_edit" app:tint="#8B5CF6" android:background="@drawable/circle_bg" android:backgroundTint="#F3E8FF" android:padding="8dp"/>
                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Idea Notes" android:textColor="#1E293B" android:textStyle="bold" android:textSize="16sp"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2 days ago • 104 KB" android:textColor="#64748B" android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView android:layout_width="18dp" android:layout_height="18dp" android:src="@android:drawable/btn_star_big_on" app:tint="#FFC107"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Item 3: Work Files -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                android:backgroundTint="@android:color/transparent">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/glass_card_bg" android:padding="18dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@android:drawable/ic_menu_save" app:tint="#F59E0B" android:background="@drawable/circle_bg" android:backgroundTint="#FFFBEB" android:padding="8dp"/>
                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Work Files" android:textColor="#1E293B" android:textStyle="bold" android:textSize="16sp"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3 notes • Last updated 3 days ago" android:textColor="#64748B" android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView android:layout_width="18dp" android:layout_height="18dp" android:src="@android:drawable/radiobutton_off_background" app:tint="#94A3B8"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Item 4: Project Brainstorming -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                android:backgroundTint="@android:color/transparent">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/glass_card_bg" android:padding="18dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@android:drawable/ic_menu_agenda" app:tint="#06B6D4" android:background="@drawable/circle_bg" android:backgroundTint="#ECFEFF" android:padding="8dp"/>
                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Project Brainstorming" android:textColor="#1E293B" android:textStyle="bold" android:textSize="16sp"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="April 18, 2024 • 720 KB" android:textColor="#64748B" android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView android:layout_width="18dp" android:layout_height="18dp" android:src="@android:drawable/btn_star_big_on" app:tint="#FFC107"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Item 5: Meeting Notes -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                android:backgroundTint="@android:color/transparent">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/glass_card_bg" android:padding="18dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@android:drawable/ic_menu_agenda" app:tint="#84CC16" android:background="@drawable/circle_bg" android:backgroundTint="#F7FEE7" android:padding="8dp"/>
                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Meeting Notes" android:textColor="#1E293B" android:textStyle="bold" android:textSize="16sp"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="April 10, 2024 • 48 KB" android:textColor="#64748B" android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView android:layout_width="18dp" android:layout_height="18dp" android:src="@android:drawable/btn_star_big_on" app:tint="#FFC107"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Item 6: Personal Docs -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                android:backgroundTint="@android:color/transparent">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/glass_card_bg" android:padding="18dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@android:drawable/ic_menu_agenda" app:tint="#3B82F6" android:background="@drawable/circle_bg" android:backgroundTint="#EFF6FF" android:padding="8dp"/>
                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Personal Docs" android:textColor="#1E293B" android:textStyle="bold" android:textSize="16sp"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5 files • Last updated April 8, 2024" android:textColor="#64748B" android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView android:layout_width="18dp" android:layout_height="18dp" android:src="@android:drawable/radiobutton_off_background" app:tint="#94A3B8"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Add Task Button -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ Add Task"
                    android:textColor="#C084FC"
                    android:textStyle="bold"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textSize="14sp"/>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        app:cardCornerRadius="38dp"
        app:cardElevation="12dp"
        android:backgroundTint="@android:color/transparent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/glass_card_bg" android:orientation="horizontal" android:gravity="center">
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                <ImageView android:layout_width="22dp" android:layout_height="22dp" android:src="@android:drawable/ic_menu_sort_by_size" app:tint="#64748B"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Home" android:textSize="10sp" android:textColor="#64748B"/>
            </LinearLayout>
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center" android:background="@drawable/circle_bg" android:backgroundTint="#F3E8FF" android:padding="8dp">
                <ImageView android:layout_width="22dp" android:layout_height="22dp" android:src="@android:drawable/ic_menu_edit" app:tint="#8B5CF6"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Docs" android:textSize="10sp" android:textColor="#8B5CF6" android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                <ImageView android:layout_width="22dp" android:layout_height="22dp" android:src="@android:drawable/ic_menu_agenda" app:tint="#64748B"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Stats" android:textSize="10sp" android:textColor="#64748B"/>
            </LinearLayout>
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                <ImageView android:layout_width="22dp" android:layout_height="22dp" android:src="@android:drawable/btn_star_big_on" app:tint="#64748B"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Stats" android:textSize="10sp" android:textColor="#64748B"/>
            </LinearLayout>
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                <ImageView android:layout_width="22dp" android:layout_height="22dp" android:src="@android:drawable/ic_menu_my_calendar" app:tint="#64748B"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Profile" android:textSize="10sp" android:textColor="#64748B"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Floating Calendar Icon -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="100dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center">
            <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@android:drawable/ic_menu_my_calendar" app:tint="#3B82F6"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="20" android:textColor="#1E293B" android:textStyle="bold" android:textSize="16sp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>
