<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Base application theme. -->
    <style name="Theme.ToDoList" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/neon_cyan</item>
        <item name="colorPrimaryVariant">@color/neon_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/neon_purple</item>
        <item name="colorSecondaryVariant">@color/neon_purple</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/futuristic_bg</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RoutineCardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="RoutineInnerLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/glass_card_bg</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="IconContainerStyle">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="IconImageStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="SpacerView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="RoutineTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#1E293B</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RoutineSubtitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#64748B</item>
    </style>

</resources>